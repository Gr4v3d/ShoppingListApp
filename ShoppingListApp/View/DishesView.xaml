<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:MauiApp2.ViewModel"
             x:Class="MauiApp2.View.DishesView"
             Title="Wybierz dania do dodania do listy!"
             BackgroundColor="BlanchedAlmond">
    
    <ContentPage.BindingContext>
        <viewModels:DishViewModel/>
    </ContentPage.BindingContext>
    
    <!-- Lista wszystkich dań w bazie danych-->
    <ScrollView MaximumWidthRequest="700">
        <VerticalStackLayout Spacing="10" Padding="10">
            <CollectionView ItemsSource="{Binding Dishes}"
                            SelectedItem="{Binding SelectedDish, Mode=TwoWay}"
                            SelectionMode="Single"
                            MaximumWidthRequest="700">
                
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout>
                        
                            <Label Text="{Binding DishId}" Padding="5,10"/>
                            
                            <Label Text="{Binding DishName}" Padding="5,10"/>
                        
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <!-- Wybrane danie + rozmiar porcji -->
            <Grid MaximumWidthRequest="700">
                
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition/>
                
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label Text="Wybrane danie:" Grid.Row="0" Grid.Column="0"/>
                
                <Label Text="Rozmiar Porcji " Grid.Row="0" Grid.Column="1"/>
                
                <Label Text="{Binding SelectedDish.DishName}" Grid.Row="1" Grid.Column="0"/>
                
                <Entry Text="{Binding PortionSize}" Grid.Row="1" Grid.Column="1"/>
            
            </Grid>
        
            <!-- Guzik dodania do listy zakupów-->
            <Button Text="Dodaj danie do listy zakupów" 
                    Command="{Binding AddToShopListCommand}" 
                    BackgroundColor="DodgerBlue"/>
        
            <!-- Guzik usuwania dania z bazy danych-->
            <Button Text="Usuń danie z bazy danych"
                    Background="Salmon" 
                    Command="{Binding RemoveDishButtonPressedCommand}"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>